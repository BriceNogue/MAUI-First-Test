<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP1.Views.vBatterie"
             Title="Batterie">
    <VerticalStackLayout>
        <Label 
            Text="Etat Batterie !"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Title"
            Margin="0,10,0,10"/>

        <Button
            x:Name="BtnAffiche"
            Text="Alimentation" 
            Clicked="Afficher_Clicked"
            WidthRequest="200"
            FontSize="18"/>

        <Label x:Name="LabelInfo" Text="" Margin="0,10,0,10" HorizontalOptions="Center"/>

        <Label 
            Text="Batterie" HorizontalOptions="Center"/>

        <Label 
            x:Name="LabelInfoEtat"
            Text="" HorizontalOptions="Center" Margin="0,10,0,10"/>

        <Label x:Name="LabelInfoCharge" Text="" HorizontalOptions="Center" Margin="0,0,0,10"/>
        
    </VerticalStackLayout>
</ContentPage>