<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP1.Views.vPhone"
             Title="Phone Info">
    <VerticalStackLayout Spacing="20" Margin="10">

        <Label 
            Text="Info Telephone"
            FontSize="22"
            HorizontalOptions="Center" />

        <Label
            x:Name="lbPhoneInfo"
            Text="..."
            FontSize="22"
            HeightRequest="240"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
    
    <!--{FontImage Glyph='+', Color=White, Size=22}-->
    
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Text="Ecran" 
            Clicked="Ecran_Clicked"
            IconImageSource="screen0"/>

        <ToolbarItem 
            Text="Batterie" 
            Clicked="Batterie_Clicked"
            IconImageSource="battery0"/>
        
    </ContentPage.ToolbarItems>
</ContentPage>